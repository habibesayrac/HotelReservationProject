@model List<ApiMovieViewModel>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<br /><br />
<div class="contaner">
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Film Adı</th>
        <th>Puanı</th>
        <th>Fragman</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.rank</td>
            <td>@item.title</td>
            <td>@item.rating</td>
            <td><a href="@item.imdb_link" class="btn btn-dark">Fragmanı Oynat</a></td>
        </tr>
    }
</table>    
</div>